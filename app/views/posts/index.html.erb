<div class="d-flex align-items-center justify-content-between mb-3 b">
  <h1 class="display-5 text-custom-title">Posts</h1>
  <% if user_signed_in? %>
    <%= link_to "New post", new_post_path, class: "btn btn-outline-primary" %>
  <% end %>
</div>
<div id="posts">
  <% @posts.each do |post| %>
    <div class="mb-5 border border-3s border-dark-subtle p-3 rounded-4">
      <%= render post %>
      <p>
        <%= link_to "Show this post", post, class: "btn btn-outline-secondary" %>
      </p>
    </div>
  <% end %>
</div>
