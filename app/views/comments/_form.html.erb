<!-- Form for create new comments -->
<%= form_for([@post, Comment.new]) do |f| %>
  <div class="d-flex flex-column">
    <div class="field">
      <%= f.label :content, class: "d-block mb-2 fs-5" %>
      <%= f.text_area :content, minlength: 2, maxlength: 300, class:"w-100 p-2 rounded-2 bg-custom-comments", rows: 5 %>
    </div>
    <div class="actions">
      <%= f.submit 'Create Comment', class: "btn btn-sm btn-outline-success my-2" %>
    </div>
  </div>
<% end %>
